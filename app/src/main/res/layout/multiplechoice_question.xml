<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8640C4FF">

    <Button
        android:id="@+id/hintBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icons8_info_200"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question Content"
        android:layout_below="@+id/hintBtn"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:id="@+id/QuestionName"
        />

    <GridView
        android:id="@+id/AnswerGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/QuestionName"
        android:gravity="bottom"
        android:layout_marginTop="180dp"
        android:numColumns="2"
        android:paddingStart="10dp"
        android:horizontalSpacing="15dp"
        android:verticalSpacing="10dp"/>
</RelativeLayout>